<label for="{{id}}"
	class="a-field a-field--grow {{#if hasLabelTop}}a-field--top-label{{/if}} js-form-field {{#if hasAlert}}has-error{{/if}}  {{#if value}}has-value{{/if}}">
	<span class="a-field__label">{{label}} {{#unless hideRequiredStar}}{{#if isRequired}}<span class="is-required"
			aria-label="required"></span>{{/if}}{{/unless}}</span>

	<textarea id="{{id}}" rows="{{#if rows}}{{rows}}{{^}}5{{/if}}" {{#if isRequired}}required{{/if}} {{#if
		isDisabled}}disabled{{/if}} {{#if isReadOnly}}readonly{{/if}} {{#if placeholder}}placeholder="{{placeholder}}""{{/if}}>{{value}}</textarea>

	{{#if message}}
	<small class=" a-field__info" {{#if hasAlertRole}}aria-live="assertive" role="alert" {{/if}}>{{message}}</small>
	{{/if}}
</label>
