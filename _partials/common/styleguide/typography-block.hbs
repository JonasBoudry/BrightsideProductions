<div class="o-wrapper u-padding-top-large u-padding-bottom-large">
	<h1>Typography</h1>

	<div class="c-typography">
		<div class="c-typography-start">
			<div class="c-typography-start__heading">
				<strong>{{fontShortName}}</strong>
			</div>
			<div class="c-typography-start__title">
				{{fontName}}
			</div>
			<div class="c-typography-start__content">
				{{characterSet}}
			</div>
		</div>
		<div class="c-typography-end">
			{{#with bmg.design-tokens}}
			{{#each token.typography}}
			<div class="c-typography-item">
				<div class="c-typography-item__title">
					{{#if (eq name "h1")}}<h1>Heading 1</h1>
					{{else if (eq name "h1-mobile")}}<h1>Heading 1@mobile</h1>
					{{else if (eq name "h2")}}<h2>Heading 2</h2>
					{{else if (eq name "h2-mobile")}}<h2>Heading 2@mobile</h2>
					{{else if (eq name "h3")}}<h3>Heading 3</h3>
					{{else if (eq name "h3-mobile")}}<h3>Heading 3@mobile</h3>
					{{else if (eq name "h4")}}<h4>Heading 4</h4>
					{{else if (eq name "h4-mobile")}}<h4>Heading 4@mobile</h4>
					{{else if (eq name "h5")}}<h5>Heading 5</h5>
					{{else if (eq name "h5-mobile")}}<h5>Heading 5@mobile</h5>
					{{else if (eq name "h6")}}<h6>Heading 6</h6>
					{{else if (eq name "h6-mobile")}}<h6>Heading 6@mobile</h6>
					{{else if (eq name "p")}}
					<div class="c-rich-text">
						<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
							labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
							laboris nisi ut aliquip ex ea commodo consequat. </p>
					</div>
					{{else if (eq name "p-bold")}}
					<div class="c-rich-text">
						<p><strong>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do</strong></p>
					</div>
					{{else if (eq name "text-link")}}
					<div class="c-rich-text">
						<a href="#">This is a text link</a>
					</div>
					{{/if}}
				</div>
				<div class="c-typography-item__info">
					font-family: {{fontFamily}} | font-size: {{fontSize}} | font-weight: {{fontWeight}} | line-height:
					{{lineHeightPercentFontSize}} | letter-spacing: {{letterSpacing}} | color: {{hex}} | margin-bottom:
					{{paragraphSpacing}}
				</div>
			</div>
			{{/each}}
			{{/with}}

			<div class="c-typography-item">
				<div class="c-typography-item__title">
					<div class="c-rich-text">
						<ul>
							<li>Lorem ipsum dolor</li>
							<li>Lorem ipsum dolor sit amet, consectetur adipiscing elit</li>
							<li>labore et dolore magna aliqua</li>
						</ul>
					</div>

				</div>
				<div class="c-typography-item__info">
					font-family: Poppins | font-size: 17px | font-weight: 400 | line-height: 32px | letter-spacing:
					0.25px
					| color: #323D3E | margin-bottom: 10px
				</div>
			</div>

			<div class="c-typography-item">
				<div class="c-typography-item__title">
					<div class="c-rich-text">
						<ol>
							<li>Item one</li>
							<li>Item two</li>
							<li>Item three</li>
							<li>Item four</li>
						</ol>
					</div>
				</div>
				<div class="c-typography-item__info">
					font-family: Poppins | font-size: 17px | font-weight: 400 | line-height: 32px | letter-spacing:
					0.25px
					| color: #323D3E | margin-bottom: 10px
				</div>
			</div>
		</div>
	</div>
</div>
