{{#> component renderAsComponent=true boxed=true}}
	{{#with grid}}
		<section class="c-grid">
			<div class="c-grid__heading">
				<h2>{{title}}</h2>
				{{> common/atoms/rich-text}}
			</div>
			<div class="c-grid__wrapper">
				{{#> grid renderAsGrid=true gapHuge=../gapHuge items=items }}
					{{> common/molecules/cards/card }}
				{{/grid}}
			</div>

			{{#with button}}
				<div class="m-btn-wrapper">
					{{> common/atoms/button
						../this
						text=text
						isPrimary=true
					}}
				</div>
			{{/with}}
		</section>
	{{/with}}
{{/component}}
